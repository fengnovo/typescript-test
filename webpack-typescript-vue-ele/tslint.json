{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "lib",
    "experimentalDecorators": true,
    "declaration": false,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./**/*.ts"
  ],
  "compileOnSave": false
}