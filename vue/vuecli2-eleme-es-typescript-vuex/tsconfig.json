{
    "compilerOptions": {
      "allowJs": true,
      "target": "es5",
      "baseUrl": ".",
      "lib": [
        "dom",
        "es6",
        "es7",
        "es2015",
        "es2016",
        "es2017",
        "es2018"
      ],
      "module": "es2015",
      "moduleResolution": "node",
      "outDir": "lib",
      "experimentalDecorators": true,
      "declaration": false,
      "strict": true,
      "suppressImplicitAnyIndexErrors": true,
      "removeComments": true,
      "strictPropertyInitialization": false
    },
    "exclude": [
      "typings/browser.d.ts",
      "typings/browser",
      "node_modules"
    ],
    "compileOnSave": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
}
  